#!/usr/bin/python3
import sys
import PIL.Image

def loadrom(fp, nrom, msize):
	lout = []
	sbuf = ""
	st = 0

	fp.seek(0)
	for line in fp:
		line = line.strip()
		if st:
			if line.startswith("#"):
				st = 0
		if st:
			sbuf += line
			while len(sbuf) >= msize:
				lout.append(int(sbuf[:msize], 16))
				sbuf = sbuf[msize:]
	
		if line.startswith("#%d:" % nrom):
			st = 1
	return lout

if __name__ == "__main__":
	if len(sys.argv) < 2:
		sys.exit("usage: %s nxfile [bgrom] [chrom]" % sys.argv[0])
	else:
		fname = sys.argv[1]
	if len(sys.argv) > 2:
		bgrom = int(sys.argv[2])
	else:
		bgrom = 3
	if len(sys.argv) > 3:
		chrom = int(sys.argv[3])
	else:
		chrom = 2

	palrom = 1

	file = open(fname, "r")
	lpal = loadrom(file, palrom, 8)
	lchr = loadrom(file, chrom, 32)
	lbg = loadrom(file, bgrom, 2)

	if 7 >= len(lpal):
		lpal = [
			0x053f2f00, 0x00383400,
			0x003c0c00, 0x003f3c00,
			0x003f2a15, 0x003f2a15,
			0x003f2a15, 0x003f2a15
		]

	lclr = []
	for pal in lpal:
		for nclr in range(4):
			rgb = pal >> (24 - nclr * 8) & 0xff
			lclr.append((rgb >> 4 & 3) * 80 + 15)
			lclr.append((rgb >> 2 & 3) * 80 + 15)
			lclr.append((rgb      & 3) * 80 + 15)

	img = PIL.Image.new("P", (160, 128))
	img.putpalette(lclr)
	pixels = img.load()

	sx = sy = 0
	for i, c in enumerate(lbg):
		if i < 4 or i % 2:
			continue

		for y in range(8):
			for x in range(8):
				hi = lchr[c] >> (x + y * 8) & 1
				lo = lchr[c] >> (x + y * 8 + 64) & 1

				flp = lbg[i + 1] & 0x18
				pal = lbg[i + 1] & 0x07

				px = (lo | hi << 1) + pal * 4
				if flp == 0x00:
					pixels[7 - x + sx, 7 - y + sy] = px
				elif flp == 0x08:
					pixels[    x + sx, 7 - y + sy] = px
				elif flp == 0x10:
					pixels[7 - x + sx,     y + sy] = px
				elif flp == 0x18:
					pixels[    x + sx,     y + sy] = px
		sx += 8
		if sx >= 160:
			sy += 8
			sx = 0

	img.save(fname + ".png")
